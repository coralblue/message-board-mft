<!--<#%= form_for(@message) do |f| %>-->
<%= form_for(@message, html: { class: "form-horizontal" })  do |f| %>

  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <!--名前:-->
  <!--<#%= f.text_field :name %>-->
  
      <div class="form-group">
        <label for="message_name" class="control-label col-md-2">名前:</label>
        <div class="col-md-10">
            <%= f.text_area :name, class: "form-control" %>
        </div>
    </div>

  <!--内容:-->
  <!--<#%= f.text_field :body %>-->
       <div class="form-group">
        <label for="message_body" class="control-label col-md-2">内容:</label>
        <div class="col-md-10">
            <%= f.text_area :body, class: "form-control" %>
        </div>
      </div> 
  
  <!--<#%= f.submit class: "btn btn-sm btn-primary" %>-->
  <div class="form-group">
  <div class="col-md-offset-2 col-md-10">
  <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
  </div>

<% end %>

